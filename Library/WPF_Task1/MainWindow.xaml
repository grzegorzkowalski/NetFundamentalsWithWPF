<Window x:Class="WPF_Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Task1"
        mc:Ignorable="d"
        Title="WPF Szkolenie" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="20" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="1" Grid.Row="1" FontSize="32">Podaj liczbę A:</Label>
        <TextBox Grid.Column="2" Grid.Row="1" x:Name="numberA" Width="150" 
            BorderBrush="Black" BorderThickness="2" Margin="10 0 0 0" />
        <Label Grid.Column="1" Grid.Row="2" FontSize="32">Podaj liczbę B:</Label>
        <TextBox Grid.Column="2" Grid.Row="2" x:Name="numberB" Width="150" 
            BorderBrush="Black" BorderThickness="2" Margin="10 0 0 0" />
        <TextBox Grid.Column="1" Grid.Row="3" x:Name="result" Width="auto" Height="50"
                 Grid.ColumnSpan="2" BorderBrush="Black" BorderThickness="2" Margin="10 0 0 0" />
        <Button Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="2" Height="50" Width="auto" 
                Content="Oblicz" FontSize="32" Margin="0 10" Click="Button_Click"/>
    </Grid>
</Window>
 