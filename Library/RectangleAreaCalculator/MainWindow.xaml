<Window x:Class="RectangleAreaCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RectangleAreaCalculator"
        mc:Ignorable="d"
        Title="Oblicz pole prostokąta" Height="450" Width="800">
    <Grid x:Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="20"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Column="1" Grid.Row="1" FontSize="32" Margin="10 0 10 0" >
            Długość boku A:
        </Label>
        <TextBox Grid.Column="2" Grid.Row="1" x:Name="lenghtA" Width="150" 
            BorderBrush="Black" FontSize="32" />
        <Label Grid.Column="1" Grid.Row="2" FontSize="32" Margin="10 0 10 0">
            Długość boku B:
        </Label>
        <TextBox Grid.Column="2" Grid.Row="2" x:Name="lenghtB" Width="150" 
            BorderBrush="Black" FontSize="32" />
        <TextBox Grid.Column="1" Grid.Row="3" x:Name="result" Width="auto" 
            Height="50" BorderBrush="Pink" FontSize="32" Grid.ColumnSpan="3" />
        <Button Grid.Column="1" Grid.Row="4" x:Name="submitBtn" 
            Content="Oblicz" FontSize="48" Height="80" 
            Grid.ColumnSpan="2" Click="submitBtn_Click" />
        <ComboBox Grid.Column="1" Grid.Row="5" 
            x:Name="colors" 
            Grid.ColumnSpan="3"
            SelectionChanged="colors_SelectionChanged"
        />
    </Grid>
</Window>
